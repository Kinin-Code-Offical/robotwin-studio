/* -------------------- HARD OVERRIDES: Specs/Defaults rows --------------------
   Some Unity themes/stylesheets can force TextField visuals to a white box.
   These fields are created dynamically and share the names KeyField/ValueField.
   We override them with high specificity so they always match the dark theme.
*/
.component-studio-root .editor-list .editor-row #KeyField,
.component-studio-root .editor-list .editor-row #ValueField {
    background-color: var(--field-bg, rgba(16, 20, 28, 0.75));
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-color: var(--field-border, rgba(255, 255, 255, 0.12));
    border-bottom-color: var(--field-border, rgba(255, 255, 255, 0.12));
    border-left-color: var(--field-border, rgba(255, 255, 255, 0.12));
    border-right-color: var(--field-border, rgba(255, 255, 255, 0.12));
    border-radius: var(--field-radius, 6px);
    color: var(--text-0, #f8fafc);
    height: 22px;
}

.component-studio-root .editor-list .editor-row #KeyField:hover,
.component-studio-root .editor-list .editor-row #ValueField:hover {
    background-color: var(--field-bg-hover, rgba(18, 24, 34, 0.85));
    border-top-color: var(--field-border-hover, rgba(255, 255, 255, 0.18));
    border-bottom-color: var(--field-border-hover, rgba(255, 255, 255, 0.18));
    border-left-color: var(--field-border-hover, rgba(255, 255, 255, 0.18));
    border-right-color: var(--field-border-hover, rgba(255, 255, 255, 0.18));
}

.component-studio-root .editor-list .editor-row #KeyField:focus,
.component-studio-root .editor-list .editor-row #ValueField:focus {
    background-color: var(--field-bg-focus, rgba(18, 24, 34, 0.95));
    border-top-color: var(--field-border-focus, rgba(56, 189, 248, 0.65));
    border-bottom-color: var(--field-border-focus, rgba(56, 189, 248, 0.65));
    border-left-color: var(--field-border-focus, rgba(56, 189, 248, 0.65));
    border-right-color: var(--field-border-focus, rgba(56, 189, 248, 0.65));
}

.component-studio-root .editor-list .editor-row #KeyField .unity-text-field__input,
.component-studio-root .editor-list .editor-row #KeyField .unity-base-text-field__input,
.component-studio-root .editor-list .editor-row #ValueField .unity-text-field__input,
.component-studio-root .editor-list .editor-row #ValueField .unity-base-text-field__input {
    background-color: transparent;
    border-width: 0;
    color: var(--text-0, #f8fafc);
    font-size: var(--field-font-size, 9px);
    -unity-text-align: middle-left;
}
