:root {
    --studio-hint-bg: rgba(8, 12, 18, 0.7);

    /* Unified field styling (TextField / DropdownField / etc.) */
    --field-bg: rgba(16, 20, 28, 0.75);
    --field-bg-hover: rgba(18, 24, 34, 0.85);
    --field-bg-focus: rgba(18, 24, 34, 0.95);
    --field-border: rgba(255, 255, 255, 0.12);
    --field-border-hover: rgba(255, 255, 255, 0.18);
    --field-border-focus: rgba(56, 189, 248, 0.65);
    --field-placeholder: rgba(148, 163, 184, 0.75);
    --field-radius: 6px;
    --field-font-size: 9px;
}

.component-studio-root {
    background-color: var(--bg-0, #0b0f14);
    color: var(--text-1, #cbd5f5);
    position: relative;
    min-width: 980px;
    min-height: 640px;
}

.component-panel {
    background-color: var(--panel, #0e151f);
}

.component-studio-root .top-menubar,
.component-studio-root .center-header {
    min-height: 36px;
}

.component-studio-root .menubar-center,
.component-studio-root .tool-cluster {
    flex-wrap: nowrap;
}

.component-studio-root .menu-btn,
.component-studio-root .toolbar-btn,
.component-studio-root .center-tab-btn {
    min-width: 56px;
    min-height: 26px;
}

.component-studio-root .toolbar-btn {
    height: 28px;
    min-width: 64px;
    background-color: var(--panel-strong);
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-color: var(--line-strong);
    border-bottom-color: var(--line-strong);
    border-left-color: var(--line-strong);
    border-right-color: var(--line-strong);
    border-radius: 6px;
    color: var(--text-1);
    font-size: 9px;
    -unity-font-style: bold;
    margin-right: 6px;
}

.component-studio-root .toolbar-btn.active {
    background-color: var(--accent);
    color: var(--bg-0);
    border-top-color: var(--accent);
    border-bottom-color: var(--accent);
    border-left-color: var(--accent);
    border-right-color: var(--accent);
}

.component-studio-root .panel-left {
    width: 440px;
    min-width: 380px;
    max-width: 560px;
    flex-shrink: 1;
}

.component-studio-root .panel-right {
    width: 320px;
    min-width: 260px;
    max-width: 360px;
    flex-shrink: 1;
}

.left-panel-tabs {
    flex-grow: 1;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.left-panel-tabs .tab-btn {
    flex-grow: 1;
    min-width: 0;
    font-size: 9px;
    padding: 3px 5px;
    margin-right: 5px;
}

.left-tab-panel {
    flex-grow: 1;
    min-height: 0;
    min-width: 0;
}

.component-studio-root .center-area {
    min-width: 450px;
    min-height: 0;
    flex-shrink: 1;
}

.component-studio-root .center-content {
    min-height: 0;
}

.component-scroll {
    padding: 8px 10px;
    min-height: 0;
}

.panel-section {
    background-color: var(--panel-strong);
    border-radius: 10px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-color: var(--line);
    border-bottom-color: var(--line);
    border-left-color: var(--line);
    border-right-color: var(--line);
    padding: 8px;
    margin-bottom: 8px;
}

.panel-section-title {
    font-size: 10px;
    -unity-font-style: bold;
    color: var(--text-0);
    margin-bottom: 5px;
}

.panel-section-header {
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 6px;
}

.form-row {
    margin-bottom: 6px;
}

.form-row-inline {
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
}

.form-label {
    font-size: 9px;
    color: var(--text-2);
    margin-bottom: 3px;
}

.form-field {
    height: 22px;
    border-radius: 6px;
    padding-left: 6px;
    padding-right: 6px;
}

.component-studio-root .input-dark {
    background-color: var(--field-bg, #3a3a3a);
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-color: var(--field-border, #3a3a3a);
    border-bottom-color: var(--field-border, #3a3a3a);
    border-left-color: var(--field-border, #3a3a3a);
    border-right-color: var(--field-border, #3a3a3a);
    border-radius: var(--field-radius, 6px);
    color: var(--text-0, #f8fafc);
}

.component-studio-root .input-dark:hover {
    background-color: var(--field-bg-hover, rgba(18, 24, 34, 0.85));
    border-top-color: var(--field-border-hover, rgba(255, 255, 255, 0.18));
    border-bottom-color: var(--field-border-hover, rgba(255, 255, 255, 0.18));
    border-left-color: var(--field-border-hover, rgba(255, 255, 255, 0.18));
    border-right-color: var(--field-border-hover, rgba(255, 255, 255, 0.18));
}

/* UI Toolkit doesn't support :focus-within (Unity 2021/2022). Use :focus on focusable fields instead. */
.component-studio-root .input-dark:focus,
.component-studio-root .input-dark.unity-text-field:focus,
.component-studio-root .input-dark.unity-base-text-field:focus,
.component-studio-root .input-dark.unity-base-popup-field:focus,
.component-studio-root .input-dark.unity-base-dropdown-field:focus {
    background-color: var(--field-bg-focus, rgba(18, 24, 34, 0.95));
    border-top-color: var(--field-border-focus, rgba(56, 189, 248, 0.65));
    border-bottom-color: var(--field-border-focus, rgba(56, 189, 248, 0.65));
    border-left-color: var(--field-border-focus, rgba(56, 189, 248, 0.65));
    border-right-color: var(--field-border-focus, rgba(56, 189, 248, 0.65));
}

.component-studio-root .input-dark:disabled {
    opacity: 0.6;
}

.component-studio-root .input-dark .unity-text-input {
    color: var(--text-0, #f8fafc);
    background-color: transparent;
    font-size: var(--field-font-size, 9px);
    padding-top: 2px;
    padding-bottom: 2px;
    padding-left: 0;
    padding-right: 0;
    -unity-text-align: middle-left;
    -unity-selection-color: rgba(56, 189, 248, 0.35);
    -unity-caret-color: rgba(56, 189, 248, 0.95);
}

.component-studio-root .input-dark .unity-text-field__input,
.component-studio-root .input-dark .unity-base-text-field__input,
.component-studio-root .input-dark .unity-text-field__input--single-line,
.component-studio-root .input-dark .unity-base-text-field__input--single-line {
    background-color: transparent;
    color: var(--text-0, #f8fafc);
    border-width: 0;
    font-size: var(--field-font-size, 9px);
    padding-top: 2px;
    padding-bottom: 2px;
    padding-left: 0;
    padding-right: 0;
    /* Single-line fields must be vertically centered; upper-left can clip glyphs at small heights. */
    -unity-text-align: middle-left;
    white-space: nowrap;
    overflow: hidden;
}

.component-studio-root .input-dark .unity-text-field__input--multiline,
.component-studio-root .input-dark .unity-base-text-field__input--multiline {
    background-color: transparent;
    color: var(--text-0, #f8fafc);
    border-width: 0;
    font-size: var(--field-font-size, 9px);
    padding-top: 2px;
    padding-bottom: 2px;
    padding-left: 0;
    padding-right: 0;
    -unity-text-align: upper-left;
    white-space: normal;
    overflow: auto;
}

.component-studio-root .input-dark .unity-base-text-field__input--multiline,
.component-studio-root .input-dark .unity-text-field__input--multiline {
    padding-top: 4px;
    padding-bottom: 4px;
}

.component-studio-root .input-dark .unity-text-element--placeholder,
.component-studio-root .input-dark .unity-base-text-field__placeholder,
.component-studio-root .input-dark .unity-text-field__placeholder {
    color: var(--field-placeholder, rgba(148, 163, 184, 0.75));
}

/* Description: keep to a few lines and scroll instead of growing/shrinking unpredictably */
.component-studio-root #ComponentDescriptionField {
    height: 72px;
    min-height: 64px;
    max-height: 96px;
}

.component-studio-root #ComponentDescriptionField .unity-text-field__input--multiline,
.component-studio-root #ComponentDescriptionField .unity-base-text-field__input--multiline {
    overflow: scroll;
    -unity-text-align: upper-left;
}

/* Native config JSON editor: fixed height, scroll, and slightly tighter look */
.component-studio-root .native-config-field {
    height: 160px;
    min-height: 120px;
    max-height: 260px;
    flex-grow: 0;
    flex-shrink: 0;
}

.component-studio-root .native-config-field .unity-text-field__input--multiline,
.component-studio-root .native-config-field .unity-base-text-field__input--multiline {
    overflow: auto;
    -unity-text-align: upper-left;
    white-space: pre;
}

/* Some Unity versions apply scrolling to the nested text input element instead of the multiline container */
.component-studio-root .native-config-field .unity-text-input {
    overflow: auto;
    white-space: pre;
}

.component-studio-root .field-error {
    margin-top: 4px;
    font-size: 9px;
    color: rgba(248, 113, 113, 0.95);
    white-space: normal;
}

.editor-inline-field {
    flex-grow: 1;
    min-width: 100px;
    margin-right: 6px;
    flex-shrink: 1;
}

.editor-inline-grow {
    flex-grow: 1;
    min-width: 140px;
    flex-shrink: 1;
}

.editor-inline-button {
    height: 24px;
    margin-left: 4px;
}

.editor-list {
    background-color: rgba(8, 12, 18, 0.4);
    border-radius: 8px;
    padding: 5px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
