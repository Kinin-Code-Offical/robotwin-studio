    border-bottom-width: 1px;
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-color: rgba(239, 68, 68, 0.28);
    border-bottom-color: rgba(239, 68, 68, 0.28);
    border-left-color: rgba(239, 68, 68, 0.28);
    border-right-color: rgba(239, 68, 68, 0.28);
    border-radius: 6px;
    color: var(--text-0, #f8fafc);
    font-size: 10px;
    -unity-font-style: bold;
    -unity-text-align: middle-center;
}

.component-studio-root .editor-remove-btn:hover {
    background-color: rgba(239, 68, 68, 0.22);
    border-top-color: rgba(239, 68, 68, 0.55);
    border-bottom-color: rgba(239, 68, 68, 0.55);
    border-left-color: rgba(239, 68, 68, 0.55);
    border-right-color: rgba(239, 68, 68, 0.55);
}

.component-studio-root .editor-remove-btn:active {
    background-color: rgba(239, 68, 68, 0.35);
}

.primary-button {
